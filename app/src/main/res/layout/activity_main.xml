<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


<!--    Biodata -->
    <TextView
        android:id="@+id/bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BIODATA"
        android:textSize="30dp"
        android:layout_marginBottom="70dp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

<!--    Nama -->
    <TextView
        android:id="@+id/id_nama"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:layout_below="@id/bio"
        android:text="@string/name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:layout_below="@id/bio"
        android:layout_toRightOf="@id/id_nama"/>

    <EditText
        android:id="@+id/namanya"
        android:inputType="textPersonName"
        android:maxLines="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bio"
        android:layout_toRightOf="@id/titik"
        android:width="400px"/>

<!--    Alamat -->
    <TextView
        android:id="@+id/titik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:layout_below="@id/id_nama"
        android:layout_toRightOf="@id/id_nama"/>

    <EditText
        android:id="@+id/alamatnya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="400px"
        android:inputType="text"
        android:maxLines="1"
        android:layout_below="@id/id_nama"
        android:layout_toRightOf="@id/titik"
        />

    <TextView
        android:id="@+id/id_alamat"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/black"
        android:layout_below="@id/id_nama"
        android:text="@string/address"/>

<!--    TTL -->
    <TextView
        android:id="@+id/id_tgl"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/black"
        android:layout_below="@id/id_alamat"
        android:text="@string/date"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:layout_below="@id/id_alamat"
        android:layout_toRightOf="@id/id_nama"/>

    <EditText
        android:id="@+id/tgl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_alamat"
        android:layout_toRightOf="@id/titik"
        android:width="400px"
        android:inputType="text"
        android:maxLines="1" />

<!--    Email -->
    <TextView
        android:id="@+id/id_mail"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/black"
        android:layout_below="@id/id_tgl"
        android:text="@string/mail"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:layout_below="@id/id_tgl"
        android:layout_toRightOf="@id/id_nama"/>

    <EditText
        android:id="@+id/email"
        android:maxLines="1"
        android:inputType="textEmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_tgl"
        android:layout_toRightOf="@id/titik"
        android:width="400px"/>

<!--    No. HP -->
    <TextView
        android:id="@+id/id_hape"
        android:layout_marginBottom="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/black"
        android:layout_below="@id/id_mail"
        android:text="@string/hp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:layout_below="@id/id_mail"
        android:layout_toRightOf="@id/id_nama"/>

    <EditText
        android:id="@+id/nohp"
        android:maxLines="1"
        android:inputType="number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_mail"
        android:layout_toRightOf="@id/titik"
        android:width="400px"/>

    <Button
        android:id="@+id/btn_pindah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_hape"
        android:layout_centerHorizontal="true"
        android:text="submit"
        android:textColor="@color/black"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:textSize="20sp"/>

</RelativeLayout>

