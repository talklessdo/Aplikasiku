<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <!--    Biodata -->
    <TextView
        android:id="@+id/biodata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BIODATA PENGHUNI NERAKA"
        android:textSize="30dp"
        android:layout_marginBottom="70dp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

<!--    Nama -->
    <TextView
        android:id="@+id/ininama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="Nama"
        android:layout_marginRight="30dp"
        android:textColor="@color/black"
        android:layout_below="@id/biodata"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:layout_marginRight="10dp"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_below="@id/biodata"
        android:layout_toRightOf="@id/ininama"/>
    <TextView
        android:id="@+id/result_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:textSize="25dp"
        android:layout_below="@id/biodata"
        android:layout_toRightOf="@id/dot"
        android:textColor="@color/black"/>

<!--    Alamat -->
    <TextView
        android:id="@+id/inialamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_below="@id/ininama"
        android:text="Alamat"
        android:layout_marginBottom="10dp"
        android:textSize="25dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:text=":"
        android:layout_below="@id/ininama"
        android:layout_toRightOf="@id/ininama"
        />
    <TextView
        android:id="@+id/result_alamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alamat"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_toRightOf="@id/dot"
        android:layout_below="@id/ininama"/>

<!--    TTL -->
    <TextView
        android:id="@+id/inittl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_below="@id/inialamat"
        android:text="TTL"
        android:textSize="25dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:text=":"
        android:layout_below="@id/inialamat"
        android:layout_toRightOf="@id/ininama"
        />
    <TextView
        android:id="@+id/result_ttl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TTL"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_toRightOf="@id/dot"
        android:layout_below="@id/inialamat"/>

    <!--    Email -->
    <TextView
        android:id="@+id/iniemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_below="@id/inittl"
        android:text="Email"
        android:textSize="25dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:text=":"
        android:layout_below="@id/inittl"
        android:layout_toRightOf="@id/ininama"
        />
    <TextView
        android:id="@+id/result_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_toRightOf="@id/dot"
        android:layout_below="@id/inittl"/>

    <!--    HP -->
    <TextView
        android:id="@+id/inihp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_below="@id/iniemail"
        android:text="No. HP"
        android:textSize="25dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:text=":"
        android:layout_below="@id/iniemail"
        android:layout_toRightOf="@id/ininama"
        />
    <TextView
        android:id="@+id/result_hp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No. HP"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_toRightOf="@id/dot"
        android:layout_below="@id/iniemail"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/inihp"
        android:text="~ { TERIMA KASIH } ~"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        />

  </RelativeLayout>